{
  "name": "cypress-automation",
  "version": "1.0.0",
  "description": "Cypress automation framework with Allure reporting and Cucumber integration",
  "scripts": {
    "test": "cypress run",
    "test:open": "cypress open",
    "test:ci": "cypress run --browser chrome --headless --config video=true,videoCompression=32",
    "test:chrome": "cypress run --browser chrome",
    "test:firefox": "cypress run --browser firefox",
    "test:edge": "cypress run --browser edge",
    "test:headed": "cypress run --headed",
    "test:spec": "cypress run --spec",
    "test:parallel": "cypress run --headless --browser chrome --parallel",
    
    "clean": "npm run clean:reports && npm run clean:artifacts",
    "clean:reports": "rm -rf cypress/allure-results cypress/allure-report",
    "clean:artifacts": "rm -rf cypress/screenshots cypress/videos",
    
    "report": "allure generate cypress/allure-results --clean -o cypress/allure-report && allure open cypress/allure-report",
    "report:serve": "allure serve cypress/allure-results",
    "report:history": "allure generate --clean -o cypress/allure-report-history cypress/allure-results && allure open cypress/allure-report-history",
    
    "full-test": "npm run clean && npm run test:ci && npm run report",
    "posttest": "npm run report",
    
    "lint": "eslint cypress/",
    "format": "prettier --write cypress/",
    "security-check": "npm audit --production --audit-level=moderate"
  },
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^22.0.1",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.5",
    "cypress": "^14.3.3",
    "@shelex/cypress-allure-plugin": "^2.42.0",
    "cypress-xpath": "^2.0.1",
    "allure-commandline": "^2.27.0",
    "eslint": "^8.56.0",
    "eslint-plugin-cypress": "^2.13.3",
    "prettier": "^3.2.4",
    "esbuild": "^0.19.2",
    "multiple-cucumber-html-reporter": "^3.2.0",
    "cypress-terminal-report": "^5.0.2",
    "cypress-failed-log": "^2.9.0",
    "cypress-grep": "^3.1.3",
    "cypress-parallel": "^0.12.0",
    "cypress-plugin-api": "^2.10.0",
    "cypress-wait-until": "^1.7.2"
  },
  "keywords": [
    "cypress",
    "testing",
    "automation",
    "allure",
    "cucumber",
    "bdd",
    "blankfactor"
  ],
  "author": "Fabian Correa",
  "license": "QA",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}